@model SGT.Models.Veiculo

@{
    ViewData["Title"] = "Deletando veículo";
}

<h1>Deletar</h1>

<h3>Tem certeza que vai deletar este veículo?</h3>
<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LetreiroIda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LetreiroIda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LetreiroIVolta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LetreiroIVolta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Linha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Linha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
